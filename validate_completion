#
# Validate completions
#
# Place in /etc/bash_completion.d
#
_validate() {
        local cur prev opts
        COMPREPLY=()
        cur="${COMP_WORDS[COMP_CWORD]}"
        prev="${COMP_WORDS[COMP_CWORD-1]}"
        opts="validate submit cloud status report"

        case "${prev}" in
                "validate")
                        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
                        return 0
                ;;
                *)
                        _filedir
                        return 0
                ;;
        esac
}
complete -F _validate $nospace $filenames validate

